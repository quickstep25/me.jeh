# CONSISTENT CODING FORMAT METHODS FOR SUPPORTED EDITING SOFTWARE.  REFERENCE: www.editorconfig.org
root = true

# All Files
[*]
indent_style = tab
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_brace_style = 1TBS

# Web Files
[*.{html,htm,cfm,cfml,php,css,asp}]
indent_style = tab
indent_size = 4

# Additional Markup Languages
[*.{xml,rdl}]
indent_style = unset
indent_size = unset
tab_width = unset
trim_trailing_whitespace = unset
insert_final_newline = unset
charset = unset

# PreProcessor Languages
[*.{less,scss,sass}]
indent_style = tab
indent_size = 4

# HTML PreProcessor Specific
[*.{jade,pug,haml}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = false

# Markdown Files
[*.md]
trim_trailing_whitespace = false

# JavaScript Files
[*.js]
indent_style = tab
indent_size = 4
indent_brace_style = 1TBS
spaces_around_brackets = outside
curly_bracket_next_line = true

# SQL Scripts
[*.sql]
indent_style = tab
indent_size = 4
indent_brace_style = 1TBS
trim_trailing_whitespace = true
spaces_around_operators = true

# PYTHON Files
[*.py]
indent_style = space
indent_size = 4

# YAML & JSON Files
# (these settings should not be changed) #
[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
